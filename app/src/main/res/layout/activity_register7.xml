<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".register.RegisterActivity7">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_m"
        android:layout_marginTop="64dp"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="학생증을\n인증해주세요."
        android:textSize="24sp"
        android:textColor="@color/main_black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_m"
        android:layout_marginTop="@dimen/spacing_xs"
        android:fontFamily="@font/notosanskr_bold"
        android:includeFontPadding="false"
        android:text="플레이그라운드는 대학생을 위한 커뮤니티입니다 :)"
        android:textColor="@color/sub_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/spacing_m"
        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:text="신원확인을 위해 학생증을 인증해주시면,\n인증완료시 인증마크를 드립니다."
        android:textColor="@color/sub_gray"
        android:textSize="12sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <ImageView
        android:id="@+id/student_card_btn"
        android:layout_width="296dp"
        android:layout_height="140dp"
        android:layout_marginStart="@dimen/spacing_xl"
        android:layout_marginEnd="@dimen/spacing_xl"
        android:layout_marginTop="@dimen/spacing_l"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView3"

        android:background="@drawable/ic_student_card"
        android:scaleType="center"
        app:srcCompat="@drawable/ic_camera_black" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/spacing_xxs"
        app:layout_constraintStart_toStartOf="@id/student_card_btn"
        app:layout_constraintTop_toBottomOf="@id/student_card_btn"

        android:fontFamily="@font/notosanskr_regular"
        android:includeFontPadding="false"
        android:text="*  만약 학생증이 없으시다면, 본인 이름이 나온 포탈로 인증이나\n재학증명서 등으로도 인증 가능합니다! "
        android:textColor="@color/sub_gray"
        android:textSize="10sp" />

    <Button
        android:id="@+id/next_btn"
        android:layout_width="match_parent"
        android:layout_height="52dp"
        android:layout_margin="@dimen/spacing_m"
        android:background="@drawable/ic_disabled_button"
        android:enabled="false"
        android:fontFamily="@font/notosanskr_bold"
        android:text="가입완료"
        android:textColor="@color/sub_gray"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        style="?android:attr/borderlessButtonStyle" />

</androidx.constraintlayout.widget.ConstraintLayout>